<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <com.tcc.app.customview.TextviewSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/late_fine"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <com.tcc.app.customview.TextviewReguler
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/late_fine_dialog_txt"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/light_grey" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:hint="@string/late_fine"
            app:hintTextColor="@color/black">

            <EditText
                android:id="@+id/edtLateFine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:editable="false"
                android:focusable="false"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="none"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.tcc.app.customview.TextviewSemiBold
            android:id="@+id/txtLateFine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="03:45 min"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:visibility="gone" />


        <com.tcc.app.customview.TextviewReguler
            android:id="@+id/txtSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/button_present"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:text="@string/submit"
            android:textColor="@drawable/selector_attendance_textview" />


    </LinearLayout>
</FrameLayout>